{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "remove build dir",
			"type": "shell",
			"windows": {
				"command": "if (Test-Path \"build\") { Remove-Item \"build\" -Recurse -Force }",
				"args": []
			},
			"command": "rm",
			"args": [
				"-rf",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "make build dir",
			"type": "shell",
			"windows": {
				"command": "if (-Not (Test-Path \"build\")) { New-Item -ItemType Directory \"build\" }",
				"args": []
			},
			"command": "mkdir",
			"args": [
				"-p",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "configure",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-G",
				"Ninja",
				".."
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			}
		},
		{
			"label": "build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"."
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": [
				"$gcc"
			],
			"dependsOn": "configure",
			"group": "build"
		},
		{
			"label": "clean build",
			"type": "process",
			"dependsOn": [
				"remove build dir",
				"make build dir",
				"configure",
				"build"
			],
			"command": "",
			"dependsOrder": "sequence",
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}